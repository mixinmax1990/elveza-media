<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:background="@android:color/black"
        android:id="@+id/morenews_cover"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/morenews_cover"
            app:layout_constraintBottom_toBottomOf="@id/morenews_cover"
            app:layout_constraintLeft_toLeftOf="@id/morenews_cover"
            app:layout_constraintRight_toRightOf="@id/morenews_cover"
            android:background="@drawable/gradient_shadow"
            android:alpha=".5"/>
    <TextView
        app:layout_constraintBottom_toBottomOf="@id/morenews_cover"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/morenews_title"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:maxLines="2"
        android:text="Testing the Headline is going to be Long, very very Long "
    android:layout_width="0dp"
    android:layout_height="60dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>